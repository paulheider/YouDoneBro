ScreenManagement:
    RootWidget:
    AboutScreen:

<AboutScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            markup: True
            halign: 'center'
            text_size: [None,None]
            text: '[b]\'"You Done, Bro?\"[/b]\nAn app for monitoring gender and status biases\nin conversational turn-taking patterns'
        Label:
            markup: True
            halign: 'center'
            text: '[b]Lead Dev:[/b]\nPaul M. Heider'
        Label:
            markup: True
            halign: 'center'
            text: '[b]Contributions or Bugs?[/b]\n[i]https://github.com/paulheider/YouDoneBro/issues[/i]'
        Label:
            markup: True
            halign: 'center'
            text: '[b]Source Code:[/b]\n[i]https://github.com/paulheider/YouDoneBro[/i]'
        Label:
            markup: True
            halign: 'center'
            text: '[b]Version:[/b]  1.5'
        Button:
            text: 'Back to App'
            on_release:
                root.manager.transition.direction = 'up'
                root.manager.current = 'Four-Way Tracker'

<RootWidget>:
    size_hint: 1,1
        
    Label:
        id: facilitators
        text: 'facilitators'
        size_hint: 0.5,0.05
        pos_hint: {'center_x': 0.5 , 'top': 1 }
    
    Button:
        id: fac_bro_btn
        text: 'a bro'
        size_hint: 0.45,0.3
        pos_hint: {'center_x': 0.25 , 'top': 0.95 }
        on_press: self.parent.tap( 'fac_bro' )
        font_size: min( ( self.height - 5 ) / 3 , ( self.width - 10 ) / 5 )
    Label:
        id: fac_bro_time
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.375 , 'center_y': 0.875 }
    Label:
        id: fac_bro_pct
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.125 , 'center_y': 0.875 }
        
    Button:
        id: fac_nd_btn
        text: 'not a bro'
        size_hint: 0.45,0.3
        pos_hint: {'center_x': 0.75 , 'top': 0.95 }
        on_press: self.parent.tap( 'fac_nd' )
        font_size: min( ( self.height - 5 ) / 3 , ( self.width - 10 ) / 5 )
    Label:
        id: fac_nd_time
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.625 , 'center_y': 0.875 }
    Label:
        id: fac_nd_pct
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.875 , 'center_y': 0.875 }


    Button:
        id: about_btn
        text: 'about'
        size_hint: 0.1,0.1
        pos_hint: {'center_x': 0.1 , 'center_y' : 0.5 }
        on_release:
            root.manager.transition.direction = 'down'
            root.manager.current = 'About'
        font_size: min( ( self.height - 10 ) / 2 , ( self.width - 10 ) / 2 )
    Button:
        text: 'pause'
        size_hint: 0.45,0.2
        pos_hint: {'center_x': 0.5 , 'center_y' : 0.5 }
        on_press: self.parent.tap( 'pause' )
        font_size: min( ( self.height - 10 ) / 2 , ( self.width - 10 ) / 2 )
    Button:
        text: 'clear'
        size_hint: 0.1,0.1
        pos_hint: {'center_x': 0.9 , 'center_y' : 0.5 }
        ##on_touch_down: self.parent.create_clock()
        ##on_touch_up: self.parent.delete_clock()
        on_press: self.parent.press( 'clear' )
        on_release: self.parent.release( 'clear' )
        font_size: min( ( self.height - 10 ) / 2 , ( self.width - 10 ) / 2 )

    Button:
        id: nf_bro_btn
        text: 'a bro'
        size_hint: 0.45,0.3
        pos_hint: {'center_x': 0.25 , 'top': 0.35 }
        on_press: self.parent.tap( 'nf_bro' )
        font_size: min( ( self.height - 5 ) / 3 , ( self.width - 10 ) / 5 )
    Label:
        id: nf_bro_time
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.375 , 'center_y': 0.125 }
    Label:
        id: nf_bro_pct
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.125 , 'center_y': 0.125 }

    Button:
        id: nf_nd_btn
        text: 'not a bro'
        size_hint: 0.45,0.3
        pos_hint: {'center_x': 0.75 , 'top': 0.35 }
        on_press: self.parent.tap( 'nf_nd' )
        font_size: min( ( self.height - 5 ) / 3 , ( self.width - 10 ) / 5 )
    Label:
        id: nf_nd_time
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.625 , 'center_y': 0.125 }
    Label:
        id: nf_nd_pct
        size_hint: 0.125,0.1
        pos_hint: {'center_x': 0.875 , 'center_y': 0.125 }
    
    Label:
        text: 'non-facilitators'
        size_hint: 0.5,0.05
        pos_hint: {'center_x': 0.5 , 'bottom': 1 }
